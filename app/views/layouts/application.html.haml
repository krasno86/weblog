!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Creative - Start Bootstrap Theme
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    / Bootstrap Core CSS
    / Custom Fonts
    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic", :rel => "stylesheet", :type => "text/css"}/
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
    %script{:src => "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
    %script{:src => "https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"}
  %body#page-top
    %nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            Menu
            %i.fa.fa-bars
          = link_to(t('application.menu.gallery'), root_path , :class => 'navbar-brand page-scroll')
          -#%a.navbar-brand.page-scroll{:href => "/pictures#wellcome"} Gallery by Krasno

        #bs-example-navbar-collapse-1.collapse.navbar-collapse.hide-lg
          %ul.nav.navbar-nav.navbar-right
            %li
              - if user_signed_in?
                %a Hello, #{current_user.email}
                %li
                  = link_to(t('application.menu.log_out'), destroy_user_session_path, :method => :delete)
              - else
                %li
                  = link_to(t('application.menu.log_in'), new_user_session_path)
            %li
              = link_to(t('application.menu.sign_in'), new_user_registration_path)
            %li
              = link_to(t('application.menu.log_in_with_facebook'), user_facebook_omniauth_authorize_path)
            %li
              = link_to(t('application.menu.log_in_with_twitter'), user_twitter_omniauth_authorize_path)
            %li
              = link_to(t('application.menu.log_in_with_vk'), user_vk_omniauth_authorize_path)
            %li
              = link_to(t('application.menu.categories'), categories_path)
              -#%a.page-scroll{:href => "/categories#index"} Категории
            %li
              = link_to(t('application.menu.pictures'), pictures_path)
              -#%a.page-scroll{:href => "/pictures#index"} Фото
            %li
              = link_to(t('application.menu.comments'), all_comments_path)
            -#%li
            -#  = link_to(t("Действия пользователя"), events_path)
            %li
              - if I18n.locale == :en
                = link_to locale: :ru do
                  %i.flag.flag-ru
                  RU
              - else
                = link_to locale: :en do
                  %i.flag.flag-en
                  EN
              -#<select>
              -#<option>
              -#= link_to(t('application.menu.log_in_with_facebook'), user_facebook_omniauth_authorize_path)
              -#</option>
              -#<option>
              -#= link_to(t('application.menu.log_in_with_twitter'), user_twitter_omniauth_authorize_path)
              -#</option>
              -#<option>
              -#= link_to(t('application.menu.log_in_with_vk'), user_vk_omniauth_authorize_path)
              -#</option>
              -#</select>
    / /.navbar-collapse
    / /.container-fluid
    / jQuery
    / Theme JavaScript
    -#%flash.each do |f|
    -#  = f
    -#%end

    = yield
