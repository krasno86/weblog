= form_for @user_friendly do |f|
  - if @user_friendly.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_friendly.errors.count, "error")} prohibited this user_friendly from being saved:"
      %ul
        - @user_friendly.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
