
<% @categories.each do |category| %>

<section class="no-padding" id="portfolio">
  <div class="container-fluid">
    <div class="row no-gutter popup-gallery">
      <div class="col-lg-4 col-sm-6">
        <!--<a href="<%#= category_path(category) %>" class="portfolio-box">-->
        <%=link_to category_path(category.id), :id => category.id, class:"portfolio-box" do %>
          <%= image_tag(category.pictures.order("RANDOM()").first.avatar.url, class: "img-responsive", alt: "", size: "650x350")%>
          <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
              <div class="project-category text-faded">
                Category
              </div>
              <div class="project-name">
                <%=category.name%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
  <% end %>

