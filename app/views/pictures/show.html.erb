<body style="background-color: burlywood ">

<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
      </button>
      <a class="navbar-brand page-scroll" href="#page-top">Bootstrap</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><a>
          <% if user_signed_in? %>Здравствуйте, <%= current_user.email %>
              </a></li>
              <li>
                <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %><% else %>
              </li>
              <li>
                <%= link_to 'Войти', new_user_session_path %>
              </li>
              <li><%= link_to 'Зарегистрироваться', new_user_registration_path %>
              </li>
          <% end %>
          <li>
            <a class="page-scroll" href="/categories#index">Категории</a>
          </li>
          <li>
            <a class="page-scroll" href="/pictures#index">Фото</a>
          </li>
          <li>
            <a class="page-scroll" href="/coments#index">Коментарии</a>
          </li>
          <li>
            <a class="page-scroll" href="/userAction#index">Действия пользователя</a>
          </li>
          </ul>
    </div>
  </div>
</nav>

<br><br><br><br><br><br>

<div class="header-content">
  <div class="header-content-inner">
        <h2><%= @picture.title %></h2>
        <p><%= image_tag(@picture.avatar)  %></p>
        <%=link_to "Like", likes_pictures_path(@pictures), class: 'glyphicon glyphicon-thumbs-up like'%>
        <p><span class="glyphicon glyphicon-time"></span> Posted on <%= Time.now.strftime("%Y-%m-%d" "," "%H:%M:%S")%></p>
        <h3 class="page-header">Comments:</h3>
        <% @picture.comments.each do |comment|%>
        <p><%= comment.text%>
          <% end %>
        </p>
        <%= render partial: "comments/form/", locals: {:@comment => @picture.comments.build } %>
  </div>
</div>

</body>
