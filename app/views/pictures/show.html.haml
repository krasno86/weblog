.header-content
  .header-content-inner
    %h2.text-center
      = @picture.title.delete!'.jpg'
    %p
      = link_to image_tag @picture.avatar, data: {url: "#{@picture.avatar}"}, class:'image-popup-no-margins', size: "300x200"
    %p
      = link_to "Like", picture_like_path(picture_id: @picture.id), method: :post, class: 'glyphicon glyphicon-thumbs-up like'
    %p
      summary likes: #{@picture.likes.size}
    %p
      %span.glyphicon.glyphicon-time
        Posted on #{@picture.created_at}
    %h3.page-header
      Comments:
    - @picture.comments.each do |comment|
      %p
        = comment.text
    = render partial: "comments/form/", locals: {:@comment => @picture.comments.build }

